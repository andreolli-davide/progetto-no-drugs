generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Article {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  url                 String   @unique
  title               String
  description         String
  content             String
  school              String
  schoolClass         String
  schoolImage         String
  schoolYear          String
  publicationDatetime String 
  files               Json[]
}

